{
  "setupTasks": [
    {
      "command": "cd photo-sharing-v1 && npm install && cd ..",
      "name": "Install Frontend Dependencies"
    },
    {
      "command": "cd photo-sharing-backend && npm install && cd ..",
      "name": "Install Backend Dependencies"
    }
  ],
  "tasks": {
    "start-backend": {
      "command": "npm",
      "args": ["start"],
      "cwd": "photo-sharing-backend",
      "name": "Start the backend server",
      "runAtStart": true,
      "preview": {
        "port": 8080
      }
    },
    "start-frontend": {
      "command": "npm",
      "args": ["start"],
      "cwd": "photo-sharing-v1",
      "name": "Start the frontend application",
      "runAtStart": true,
      "preview": {
        "port": 3000
      }
    }
  }
}
